<h1>Goal:</h1>
<table>
  <tr>
    <td>Title:</td>
    <td><%= @goal.title %></td>
  </tr>
  <tr>
    <td>Details:</td>
    <td><%= @goal.details %></td>
  </tr>
  <tr>
    <td>Visibility:</td>
    <td><%= @goal.private ? "private" : "public" %></td>
  </tr>
  <tr>
    <td>Finished?:</td>
    <td><%= @goal.complete ? "Complete" : "Ongoing" %></td>
  </tr>
  <% if @goal.user == current_user %>
    <tr>
      <td>Completed?</td>
      <td><%= completion_buttons(@goal) %></td>
    </tr>
  <% end %>
</table>

<br>

<h4>Comments</h4>
<%= render 'shared/comments', user: nil, goal: @goal, comments: @goal.comments %>